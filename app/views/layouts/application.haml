%html{lang: "en"}
  %head
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
    %meta{content: "", name: "description"}/
    %meta{content: "", name: "author"}/
    %title Dashboard Template for Bootstrap
  %body{style: ""}
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ href: "#" } Scores alpha
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{href: "#"} Dashboard
            %li
              %a{href: "#"} Settings
            %li
              %a{href: "#"} Profile
            %li
              %a{href: "#"} Help
            %li= link_to "Log out", destroy_user_session_path, method: :delete
          %form.navbar-form.navbar-right
            %input.form-control{placeholder: "Search...", type: "text"}/
    .container-fluid
      .row
        - if current_user
          .col-sm-3.col-md-2.sidebar
            %ul.nav.nav-sidebar
              %li.active
                = active_link_to 'Leagues', user_leagues_path(current_user), wrap_tag: :li
            - if params[:controller] == 'leagues'
              %ul.nav.nav-sidebar
                = active_link_to 'Current standings', user_leagues_path(current_user), wrap_tag: :li
                = active_link_to 'Generated results', user_results_path(current_user), wrap_tag: :li
            %ul.nav.nav-sidebar
              %li
                %a{href: ""} Nav item again
              %li
                %a{href: ""} One more nav
              %li
                %a{href: ""} Another nav item
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          = yield
