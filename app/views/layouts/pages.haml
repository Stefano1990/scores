%html{lang: "en"}
  %head
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
    %meta{content: "", name: "description"}/
    %meta{content: "", name: "author"}/
    %title Dashboard Template for Bootstrap
  %body{style: ""}
    %nav.navbar.navbar-fixed-top.navbar-inverse{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: root_path} scores ALPHA
        / Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav
            %li= link_to "Register", new_user_session_path
            %li
              %a{href: "#services"} Services
            %li
              %a{href: "#contact"} Contact
          - if current_user
            %ul.nav.navbar-nav.navbar-right
              %li= link_to "Log out", destroy_user_session_path, method: :delete
          - else
            %ul.nav.navbar-nav.navbar-right
              %li= link_to "Sign in", new_user_session_path
              %li= link_to "Sign up", new_user_registration_path
        / /.navbar-collapse
      / /.container
    .full-width-image-1
      .logo-wrapper
        %img.img-responsive{src: "http://placehold.it/200x200&text=Logo"}/
    = yield
