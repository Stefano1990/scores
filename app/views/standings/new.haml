%h1.page-header= "New standings for #{@league.name}"
= form_for [@league, @standing], html: { class: 'form-horizontal' } do |f|
  .form-group
    = f.label :url, class: 'control-label col-sm-2'
    .col-sm-10
      = f.text_field :url, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Create standing', class: 'btn btn-success'