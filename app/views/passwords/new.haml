.container
  .col-lg-12
    %h1 Forgot your password?
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), html: { class: 'form-horizontal', method: :post }) do |f|
      = devise_error_messages!
      .form-group
        = f.label :email, class: 'col-sm-3 control-label'
        .col-sm-8= f.email_field :email, autofocus: true, type: 'email', class: 'form-control'
      .form-group
        .col-sm-offset-3.col-sm-10
          = f.submit "Send me reset password instructions", class: 'btn btn-default'
    = render "devise/shared/links"